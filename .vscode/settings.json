{
    "C_Cpp.default.includePath": [
        "${NXTOSEK}/c++",
        "${NXTOSEK}/toppers_jsp/**",
        "${NXTOSEK}/ecrobot/**",
        "${NXTOSEK}/lejos_nxj/src/nxtvm/platform/nxt/**",
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,

        /* Cross-compiling extensions */
        "src/*.bin": true,
        "src/*.map": true,
        "src/*.elf": true,
        "src/*.sh": true,

        /* Cross-compiling files */
        "src/implementation.oil": true,
        "src/kernel*.*": true,
        "src/nxt": true,
        
        /* Build folder */
        "src/build": true,
    },
}