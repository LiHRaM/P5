{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
    },
    "options": {
        "cwd": "${workspaceFolder}/src",
    },
    "tasks": [
        {
            "label": "Make & Flash",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/make.ps1",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}