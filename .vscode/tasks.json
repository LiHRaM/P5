{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true,
    },
    "options": {
        "cwd": "${workspaceFolder}/src",
    },
    "tasks": [
        {
            "label": "Make & Flash",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/make.ps1",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "docker run --rm -v ${pwd}:/home/nxtosek/nxtOSEK/build/nxt nxtosek clean",
            "problemMatcher": []
        },
        {
            "label": "Launch interactive",
            "type": "shell",
            "command": "docker run --rm -it -v ${pwd}:/home/nxtosek/nxtOSEK/build/nxt --entrypoint bash nxtosek",
            "problemMatcher": [],
        },
        {
            "label": "Build docker container",
            "type": "shell",
            "command": "docker build -t lihram/nxt-cross-compiler .",
            "options": {
                "cwd": "${workspaceFolder}/docker/"
            },
            "problemMatcher": []
        }
    ]
}